{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "./js/typings",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
